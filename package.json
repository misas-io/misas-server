{
  "name": "misas-server",
  "version": "0.1.0",
  "description": "misas server api",
  "scripts": {
    "server": "babel-node ./server.js",
    "prod:server": "npm run migrate up && babel-node ./server.js",
    "dev:server": "nodemon ./server.js --delay 2.5 --exec babel-node",
    "migrate": "babel-node ./node_modules/mongoose-migrate/bin/migrate",
    "load_grps": "babel-node -- \"./scripts/load_grps.js\"",
    "test": "mocha --require babel-polyfill --compilers js:babel-core/register --reporter spec --full-trace './api/**/*.test.js'",
    "lint": "eslint ."
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/misas-io/misas-server"
  },
  "keywords": [
    "Node.js",
    "Javascript",
    "GraphQL",
    "Express",
    "Apollo",
    "Meteor"
  ],
  "author": "victor.j.fdez@gmail.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/misas-io/misas-server/issues"
  },
  "homepage": "https://github.com/misas-io/misas-server#readme",
  "dependencies": {
    "ajv": "^4.9.1",
    "async": "^2.1.4",
    "bluebird": "^3.4.6",
    "body-parser": "^1.15.2",
    "co": "^4.6.0",
    "cors": "^2.8.0",
    "eslint-plugin-jsx-a11y": "2.2.3",
    "express": "4.14.0",
    "geojson-validation": "^0.1.6",
    "graphql": "0.7.2",
    "graphql-server-express": "^0.4.3",
    "graphql-subscriptions": "^0.2.0",
    "graphql-tools": "^0.8.0",
    "later": "^1.2.0",
    "lodash": "^4.15.0",
    "moment": "^2.17.1",
    "mongodb": "^2.2.11",
    "subscriptions-transport-ws": "^0.2.2",
    "toml": "^2.3.0",
    "winston": "^2.3.0"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.18.2",
    "babel-eslint": "^7.1.1",
    "babel-loader": "^6.2.9",
    "babel-plugin-inline-import": "^2.0.1",
    "babel-polyfill": "^6.16.0",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-es2016": "^6.16.0",
    "babel-preset-es2017": "^6.16.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-0": "^6.16.0",
    "babel-register": "^6.18.0",
    "babel-root-import": "^4.1.5",
    "cli-spinners": "^0.3.0",
    "commander": "^2.9.0",
    "eslint": "^3.8.1",
    "eslint-config-airbnb": "^12.0.0",
    "eslint-plugin-babel": "^4.0.0",
    "eslint-plugin-import": "1.16.0",
    "eslint-plugin-react": "^6.4.1",
    "mocha": "^3.2.0",
    "mongoose-migrate": "^0.2.4",
    "nodemon": "^1.9.1",
    "ora": "^0.3.0"
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "extends": [
      "airbnb/base",
      "plugin:import/errors"
    ],
    "rules": {
      "import/no-unresolved": [
        2,
        {
          "ignore": [
            "^[@]"
          ]
        }
      ],
      "no-use-before-define": 0,
      "arrow-body-style": 0,
      "dot-notation": 0,
      "no-console": 0
    },
    "env": {
      "mocha": true
    }
  }
}
